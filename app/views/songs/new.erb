<h1>Create a new song here</h1>

<form action="/songs" method="POST">
  <label>Name:</label>
  <br>
  <input type="text" name="song[name]" id="Name">
  <br>
  <label>What genre is this song?</label>
  <%@genres.each do |genre|%>
  <input type="checkbox" name="[genres][]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name%></input>
  <%end%>

  <h2>Who's song is this?</h2>

  <input type="text" name="song[artist][name]" id="Artist Name"></input>


  <br>

  <input type="submit" value="Create Song">
  </form>
